{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "functionAppName": {
            "defaultValue": "[concat('ccvpn', uniqueString(subscription().subscriptionId))]",
            "type": "string"
        },
        "storageAccountName": {
            "defaultValue": "storage",
            "type": "string"
        },
        "keyVaultName": {
            "defaultValue": "keyvlt",
            "type": "string"
        },
        "vpnSecret": {
            "defaultValue": "ThisisaWeakpassword!",
            "type": "string"
        },
        "roleDefinitionName":{
            "type": "string",
            "defaultValue": "[guid(subscription().subscriptionId)]"
        },
        "sourceCodeRepositoryURL":{
            "type": "string",
            "defaultValue": "https://github.com/EverAzureRest/container-vpn"
        }, 
        "sourceCodeRepoBranch": {
            "type": "string",
            "defaultValue": "functionapp"
        },
        "resourceGroupName": {
            "type": "string",
            "defaultValue": "shadowsocks"
        },
        "azureRegion": {
            "type": "string",
            "defaultValue": "eastus2"
        },
        "nestedTemplateUri": {
            "type": "string",
            "defaultValue": "https://raw.github.com/EverAzureRest/container-vpn/master/resourceDeployment.json"
        }
    },
    "variables": {
    },
    "resources": [
        {
            "type": "Microsoft.Authorization/roleDefinitions",
            "name": "[parameters('roleDefinitionName')]",
            "apiVersion": "2017-09-01",
            "properties":{
                "roleName": "[parameters('roleDefinitionName')]",
                "description": "Allows Managed Identity to create Containter Resources in the Subscription", 
                "type": "Custom",
                "permissions":[
                    {
                        "actions":[
                            "Microsoft.Resources/deployments/write",
                            "Microsoft.Resources/subscriptions/resourcegroups/*",
                            "Microsoft.ContainerInstance/containerGroups/*"
                        ],
                        "notActions":[
                            "Microsoft.ContainerInstance/containerGroups/containers/exec/action",
                            "Microsoft.ContainerInstance/containerGroups/containers/logs/read"
                        ]
                    }
                ],
                "assignableScopes":[
                    "[subscription().id]"
                ]
            }
        },
        {
          "type": "Microsoft.Resources/resourceGroups",
          "apiVersion": "2018-05-01",
          "name": "[parameters('resourceGroupName')]",
          "location": "[parameters('azureRegion')]"
        },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "resourceDeployment",
            "apiVersion": "2018-05-01",
            "location": "[parameters('azureRegion')]",
            "resourceGroup": "[parameters('resourceGroupName')]",
            "dependsOn": [
                "[parameters('resourceGroupName')]"
            ],
            "properties":{
                "mode":"Incremental",
                "parameters":{
                    "functionAppName": {
                        "value": "[parameters('functionAppName')]"
                    },
                    "storageAccountName": {
                        "value": "[parameters('storageAccountName')]"
                    },
                    "keyVaultName": {
                        "value": "[parameters('keyVaultName')]"
                    },
                    "vpnSecret": {
                        "value": "[parameters('vpnSecret')]"
                    },
                    "sourceCodeRepositoryURL": {
                        "value": "[parameters('sourceCodeRepositoryURL')]"
                    },
                    "sourceCodeRepoBranch": {
                        "value": "[parameters('sourceCodeRepoBranch')]"
                    },
                    "roleDefinitionName": {
                        "value": "[parameters('roleDefinitionName')]"
                    }
                },
                "templateLink":{
                    "uri": "[parameters('nestedTemplateUri')]",
                    "contentVersion": "1.0.0.0"
                }
            }
        }

    ],
    "outputs": {

    }
}