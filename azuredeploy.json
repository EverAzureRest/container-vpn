{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "functionAppName": {
            "defaultValue": "ccvpn",
            "type": "string"
        },
        "storageAccountName": {
            "defaultValue": "storage",
            "type": "string"
        },
        "keyVaultName": {
            "defaultValue": "keyvlt",
            "type": "string"
        },
        "vpnSecret": {
            "defaultValue": "ThisisaWeakpassword!",
            "type": "string"
        },
        "roleDefinitionName":{
            "type": "string",
            "defaultValue": "appServiceCustomRole"
        },
        "sourceCodeRepositoryURL":{
            "type": "string",
            "defaultValue": "https://github.com/EverAzureRest/container-vpn"
        }, 
        "sourceCodeRepoBranch": {
            "type": "string",
            "defaultValue": "functionapp"
        },
        "resourceGroupName": {
            "type": "string",
            "defaultValue": "shadowsocks"
        },
        "azureRegion": {
            "type": "string",
            "defaultValue": "eastus2"
        },
        "nestedTemplateUri": {
            "type": "string",
            "defaultValue": "https://raw.github.com/EverAzureRest/container-vpn/master/resourceDeployment.json"
        }
    },
    "variables": {
        "identityResourceId": "[concat(resourceId(subscription().id, '/resourceGroups', parameters('resourceGroupName'), 'Microsoft.Web/sites', parameters('functionAppName')), '/providers/Microsoft.ManagedIdentity/Identities/default')]",
        "roleDefinitionId": "[resourceId(subscription().id, 'Microsoft.Authorization', parameters('roleDefinitionName'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Authorization/roleDefinitions",
            "name": "[parameters('roleDefinitionName')]",
            "apiVersion": "2017-09-01",
            "properties":{
                "roleName": "[parameters('roleDefinitionName')]",
                "description": "Allows Managed Identity to create Containter Resources in the Subscription", 
                "type": "CustomRole",
                "permissions":[
                    {
                        "actions":[
                            "Microsoft.Resources/deployments/write",
                            "Microsoft.Resources/subscriptions/resourcegroups/*",
                            "Microsoft.ContainerInstance/containerGroups/*"
                        ],
                        "notActions":[
                            "Microsoft.ContainerInstance/containerGroups/containers/exec/action",
                            "Microsoft.ContainerInstance/containerGroups/containers/logs/read"
                        ]
                    }
                ],
                "assignableScopes":[
                    "[subscription().id]"
                ]
            }
        },
        {
          "type": "Microsoft.Resources/resourceGroups",
          "apiVersion": "2018-05-01",
          "name": "[parameters('resourceGroupName')]",
          "location": "[parameters('azureRegion')]"
        },
        {
            "type": "Microsoft.Authorization/roleAssignments",
            "apiVersion": "2017-09-01",
            "name": "roleAssignment",
            "dependsOn": [
                "Microsoft.Resources/deployments/resourceDeployment",
                "[parameters('roleDefinitionName')]"
            ],
            "properties":{
                "roleDefinitionId": "[variables('roleDefinitionId')]",
                "principalId": "[reference(variables('identityResourceId'), '2015-08-31-PREVIEW').principalId]",
                "scope": "[resourceId(subscription().id, 'Microsoft.Resources', parameters('resourceGroupName'))]"
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "resourceDeployment",
            "apiVersion": "2018-05-01",
            "location": "[parameters('azureRegion')]",
            "resourceGroup": "[parameters('resourceGroupName')]",
            "dependsOn": [
                "[parameters('resourceGroupName')]"
            ],
            "properties":{
                "mode":"Incremental",
                "parameters":{
                    "functionAppName": "[parameters('functionAppName')]",
                    "storageAccountName": "[parameters('storageAccountName')]",
                    "keyVaultName": "[parameters('keyVaultName')]",
                    "vpnSecret": "[parameters('vpnSecret')]",
                    "sourceCodeRepositoryURL": "[parameters('sourceCodeRepositoryURL')]",
                    "sourceCodeRepoBranch": "[parameters('sourceCodeRepoBranch')]"
                },
                "templateLink":{
                    "uri": "[parameters('nestedTemplateUri')]",
                    "contentVersion": "1.0.0.0"
                }
            }
        }

    ],
    "outputs": {

    }
}