{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "functionAppName": {
            "defaultValue": "azvpn",
            "type": "string"
        },
        "storageAccountName": {
            "defaultValue": "fnstorage",
            "type": "string"
        },
        "keyVaultName": {
            "defaultValue": "vpnkeyvlt",
            "type": "string"
        },
        "vpnSecret": {
            "defaultValue": "ThisisaWeakpassword!ChangeME",
            "type": "string"
        },
        "resourceGroupName": {
            "type": "string",
            "defaultValue": "shadowsocks"
        },
        "azureRegion": {
            "type": "string",
            "defaultValue": "eastus2",
            "metadata": {
                "description": "Region where the Function App will be deployed.  The VPN region is applied at runtime"
            }
        },
        "nestedTemplateUri": {
            "type": "string",
            "defaultValue": "https://raw.github.com/EverAzureRest/container-vpn/master/resourceDeployment.json"
        },
        "userObjId": {
            "type": "string"
        }
    },
    "variables": {
        "roleDefinitionName": "[guid(subscription().subscriptionId)]"
    },
    "resources": [
        {
            "type": "Microsoft.Authorization/roleDefinitions",
            "name": "[variables('roleDefinitionName')]",
            "apiVersion": "2017-09-01",
            "properties":{
                "roleName": "[concat('appServiceCustomRole', ' ', variables('roleDefinitionName'))]",
                "description": "Allows Managed Identity for the Function App to create Containter Resources in the Subscription", 
                "type": "CustomRole",
                "permissions":[
                    {
                        "actions":[
                            "Microsoft.Resources/deployments/write",
                            "Microsoft.Resources/subscriptions/resourcegroups/*",
                            "Microsoft.ContainerInstance/containerGroups/*"
                        ],
                        "notActions":[
                            "Microsoft.ContainerInstance/containerGroups/containers/exec/action",
                            "Microsoft.ContainerInstance/containerGroups/containers/logs/read"
                        ]
                    }
                ],
                "assignableScopes":[
                    "[subscription().id]"
                ]
            }
        },
        {
          "type": "Microsoft.Resources/resourceGroups",
          "apiVersion": "2018-05-01",
          "name": "[parameters('resourceGroupName')]",
          "location": "[parameters('azureRegion')]"
        },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "resourceDeployment",
            "apiVersion": "2018-05-01",
            "resourceGroup": "[parameters('resourceGroupName')]",
            "dependsOn": [
                "[parameters('resourceGroupName')]"
            ],
            "properties":{
                "mode":"Incremental",
                "parameters":{
                    "functionAppName": {
                        "value": "[parameters('functionAppName')]"
                    },
                    "storageAccountName": {
                        "value": "[parameters('storageAccountName')]"
                    },
                    "keyVaultName": {
                        "value": "[parameters('keyVaultName')]"
                    },
                    "vpnSecret": {
                        "value": "[parameters('vpnSecret')]"
                    },
                    "roleDefinitionName": {
                        "value": "[variables('roleDefinitionName')]"
                    },
                    "userObjId": {
                        "value": "[parameters('userObjId')]"
                    }
                },
                "templateLink":{
                    "uri": "[parameters('nestedTemplateUri')]",
                    "contentVersion": "1.0.0.0"
                }
            }
        }

    ],
    "outputs": {

    }
}